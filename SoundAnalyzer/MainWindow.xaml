<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundAnalyzer"
        xmlns:UserControls="clr-namespace:SoundAnalyzer.UserControls" x:Class="SoundAnalyzer.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1200" WindowStartupLocation="CenterScreen" Background="Gray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Name="PagePanel" Width="21cm" >
                <!--<UserControls:PageUC HorizontalAlignment="Left" Margin="21,19,0,-172" VerticalAlignment="Top" Height="1122" Width="793"/>-->
            </StackPanel>
        </ScrollViewer>
        <UserControls:MainUC Grid.Column="1"/>
    </Grid>
</Window>
